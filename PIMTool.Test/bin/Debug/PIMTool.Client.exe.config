<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
   </configSections>
  <appSettings>
    <add key="BaseAddressServices" value="https://localhost:44334/" />
  </appSettings>
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  <log4net>
    <!-- Log output destinations -->
    <appender name="PIMToolClient" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\PIMToolClient.log" />
      <appendToFile value="true" />
      <maximumFileSize value="50MB" />
      <maxSizeRollBackups value="10" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%-7.7thread] %-6.6level %-30.30logger{1} | %properties{CorrelationIdContext} | %message%newline%exception" />
      </layout>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <param name="ImmediateFlush" value="true" />
    </appender>

    <root>
      <level value="DEBUG" />
      <appender-ref ref="PIMToolClient" />
    </root>

  </log4net>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Ninject" publicKeyToken="c7192dc5380945e7" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.0.0" newVersion="4.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>